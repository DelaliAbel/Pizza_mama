@page
@model Pizza_mama.Pages.Admin.Pizzas.DeleteModel

@{
    ViewData["Title"] = "Supprimer Pizza";
}

<h1>@ViewData["Title"]</h1>

<h3>Etes-vous sûr de vouloir supprimer ce pizza</h3>
<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Prix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Vegetarien)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Vegetarien)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Ingredient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Ingredient)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pizza.PizzaID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour au menu</a>
    </form>
</div>
